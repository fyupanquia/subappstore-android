<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sise.subappstore.RegistrarSubasta" >

    <TextView
        android:id="@+id/etNombreRegistroUser_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="REGISTRAR NUEVA SUBASTA"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNombreRegistroUser_"
        android:layout_below="@+id/etNombreRegistroUser_"
        android:background="#80000000"
        android:ems="10"
        android:hint="Título"
        android:textColor="#ffffff"
        android:textColorHint="#000000"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/etTitulo"
        android:layout_alignTop="@+id/ivImagenP"
        android:layout_marginTop="33dp"
        android:background="#80000000"
        android:ems="10"
        android:hint="Descripción"
        android:textColor="#ffffff"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/ivImagenP"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/etTitulo"
        android:layout_marginRight="31dp"
        android:background="#80000000"
        android:maxHeight="130dp"
        android:maxWidth="130dp"
        android:src="@drawable/box_icon" />

    <ImageButton
        android:id="@+id/ibGaleriaRegistrarSubasta"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/etTitulo"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/etTitulo"
        android:background="#80000000"
        android:scaleType="fitXY"
        android:src="@drawable/gallery" />

    <ImageButton
        android:id="@+id/ibCamaraRegistrarSubasta"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/etDescripcion"
        android:layout_alignLeft="@+id/ibGaleriaRegistrarSubasta"
        android:background="#80000000"
        android:scaleType="fitXY"
        android:src="@drawable/camera" />

    <Spinner
        android:id="@+id/spCategoriasRegisterSubasta"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/ivImagenP"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@+id/ivImagenP" />

    <ImageView
        android:id="@+id/ivMonedaSubasta"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/monedita_dorada" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/ivImagenP"
        android:layout_alignLeft="@+id/etDescripcion"
        android:text="Valorización en monedas de oro :"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivMonedaSubasta"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/textView2"
        android:background="#80000000"
        android:ems="10"
        android:hint="Precio"
        android:inputType="number"
        android:paddingBottom="0dp"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnRegistrarSubasta"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_below="@+id/spCategoriasRegisterSubasta"
        android:layout_centerHorizontal="true"
        android:text="Subastar"
        android:textSize="32sp" />

</RelativeLayout>