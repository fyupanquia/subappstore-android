<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sise.subappstore.LoginActivity" >

    <requestFocus />

    <ImageView
        android:id="@+id/ivSigMoneda"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icono" />

    <TextView
        android:id="@+id/txtRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtClave"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:text="Registrarse"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/tvPropietario"
        android:layout_alignBottom="@+id/tvPropietario"
        android:layout_alignLeft="@+id/txtClave"
        android:background="#80000000"
        android:ems="10"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtClave"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tvEtiquetas"
        android:layout_toRightOf="@+id/tvPropietario"
        android:background="#80000000"
        android:ems="10"
        android:inputType="textPassword"
        android:password="true"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tvPropietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvEtiquetas"
        android:layout_below="@+id/ivSigMoneda"
        android:layout_marginTop="34dp"
        android:text="Usuario : "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEtiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUsuario"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/ivSigMoneda"
        android:text="Clave :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnIngresar"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/txtClave"
        android:layout_below="@+id/txtClave"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ingresar" />

</RelativeLayout>