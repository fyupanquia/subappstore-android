<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sise.subappstore.LoginActivity" >

    <requestFocus />

    <TextView
        android:id="@+id/tvPropietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_perfil_user"
        android:layout_below="@+id/img_perfil_user"
        android:layout_marginTop="18dp"
        android:text="Ingrese Usuario :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtClave"
        android:layout_below="@+id/tvPropietario"
        android:layout_marginTop="21dp"
        android:background="#80000000"
        android:ems="10"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvuserhome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="#80000000"
        android:ems="10"
        android:inputType="textPassword"
        android:password="true"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/img_perfil_user"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icono" />

    <TextView
        android:id="@+id/tvuserhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPropietario"
        android:layout_below="@+id/txtUsuario"
        android:layout_marginTop="23dp"
        android:text="Ingrese Clave :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtClave"
        android:layout_below="@+id/txtClave"
        android:layout_marginRight="24dp"
        android:layout_marginTop="27dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ingresar" />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnIngresar"
        android:layout_marginRight="24dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/btnIngresar"
        android:background="@android:color/transparent"
        android:text="Recordar"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIngresar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Registrarse"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

</RelativeLayout>