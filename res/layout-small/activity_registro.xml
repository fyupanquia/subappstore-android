<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sise.subappstore.RegistroActivity" >

    <TextView
        android:id="@+id/tvMejorOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:text="Elegir \n Imagen"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgSubir"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/btnAceptar"
        android:src="@drawable/ic_launcher" />

    <EditText
        android:id="@+id/etUsuarioRegistroUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvPropietario"
        android:layout_alignBottom="@+id/tvPropietario"
        android:layout_alignLeft="@+id/btnAceptar"
        android:layout_alignParentRight="true"
        android:background="#c4f4cf"
        android:ems="10"
        android:hint="Ingrese su Usuario" />
    <requestFocus />

    <EditText
        android:id="@+id/etClaveRegistroUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvuserhome"
        android:layout_alignBottom="@+id/tvuserhome"
        android:layout_toRightOf="@+id/imgSubir"
        android:background="#c4f4cf"
        android:ems="10"
        android:hint="Ingrese su Clave"
        android:inputType="textPassword"
        android:password="true" >
    </EditText>

    <TextView
        android:id="@+id/tvuserhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgSubir"
        android:layout_below="@+id/tvPropietario"
        android:layout_marginTop="20dp"
        android:text="Clave :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNombreRegistroUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvCantMonedas"
        android:layout_alignBottom="@+id/tvCantMonedas"
        android:layout_alignLeft="@+id/etApellidoRegistroUser"
        android:background="#c4f4cf"
        android:ems="10"
        android:hint="Ingrese Nombres" />

    <TextView
        android:id="@+id/tvCantMonedas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMejorOferta"
        android:layout_marginTop="38dp"
        android:layout_toLeftOf="@+id/etUsuarioRegistroUser"
        android:text="Nombres :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserGanador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPropietario"
        android:layout_below="@+id/etNombreRegistroUser"
        android:layout_marginTop="16dp"
        android:text="Apellidos :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTRestante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvuserhome"
        android:layout_below="@+id/tvUserGanador"
        android:layout_marginTop="15dp"
        android:text="E-mail :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="17dp"
        android:text="Telefono :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvUserGanador"
        android:layout_below="@+id/tvTRestante"
        android:layout_marginTop="18dp"
        android:text="Direccion :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPropietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvuserhome"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="17dp"
        android:text="Usuario :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAceptar"
        style="@android:style/Theme.Translucent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="#c4f4cf"
        android:text="Aceptar" />

    <EditText
        android:id="@+id/etApellidoRegistroUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvUserGanador"
        android:layout_alignLeft="@+id/tvMejorOferta"
        android:layout_alignTop="@+id/tvUserGanador"
        android:background="#c4f4cf"
        android:ems="10"
        android:hint="Ingrese Apellidos" />

    <EditText
        android:id="@+id/etDireccionRegistroUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/etApellidoRegistroUser"
        android:layout_alignTop="@+id/textView8"
        android:background="#c4f4cf"
        android:ems="10"
        android:hint="Ingrese Direccion" />

    <EditText
        android:id="@+id/etTelefonoRegistroUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPropietario"
        android:layout_alignLeft="@+id/etDireccionRegistroUser"
        android:layout_alignTop="@+id/textView9"
        android:background="#c4f4cf"
        android:ems="10"
        android:hint="Ingrese Telefono"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etEmailRegistroUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTRestante"
        android:layout_alignLeft="@+id/etDireccionRegistroUser"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvTRestante"
        android:background="#c4f4cf"
        android:ems="10"
        android:hint="Ingrese E-Mail"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTomarFoto"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/btnAceptar"
        android:text="Tomar \n Foto"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnTomarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignTop="@+id/btnElegirGaleria"
        android:background="@android:color/transparent"
        android:src="@drawable/camera" />

    <ImageButton
        android:id="@+id/btnElegirGaleria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgSubir"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@drawable/gallery" />

</RelativeLayout>