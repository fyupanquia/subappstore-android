<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2" >

    <TextView
        android:id="@+id/etNombreRegistroUser_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="ESTA A PUNTO DE REGISTRAR UN NUEVO PRODUCTO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnIniciaraSubastar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_ir_registrar_producto" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etNombreRegistroUser_"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="Todos los productos registrados en Subappstore tendrá un tiempo límite de  604800 segundos iniciales para que la subasta acabe ,en caso que el usuario quisiera registrar un producto y subastarlo en menos tiempo tendrá que comprar esa opción con 15 monedas de oro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

</RelativeLayout>