<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.sise.subappstore.Subappstore" >

    <ImageView
        android:id="@+id/ivMonedaSubasta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/btnOfrecer"
        android:layout_alignTop="@+id/etNewOferta"
        android:src="@drawable/abc_ab_share_pack_holo_dark" />

    <Button
        android:id="@+id/btnOfrecer"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/etNewOferta"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etNewOferta"
        android:layout_marginBottom="22dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="Ofrecer"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/ivImagenProducto"
        android:layout_alignTop="@+id/btnOfrecer"
        android:layout_toLeftOf="@+id/btnOfrecer"
        android:text="SALIR DE SALA"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvNombreProducto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSalir"
        android:layout_alignTop="@+id/etNewOferta"
        android:text="......"
        android:textColor="#4901FF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivImagenProducto"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_above="@+id/tvNombreProducto"
        android:layout_alignLeft="@+id/etNombreRegistroUser_"
        android:layout_alignRight="@+id/tvPropietario"
        android:layout_below="@+id/tvPropietario" />

    <TextView
        android:id="@+id/tvPropietario"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNombreRegistroUser_"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@+id/btnOfrecer"
        android:text="......"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/etNombreRegistroUser_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/tvPropietario"
        android:text="Propietario:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnOfrecer"
        android:layout_alignBottom="@+id/btnOfrecer"
        android:layout_toRightOf="@+id/btnOfrecer"
        android:text="Mis monedas"
        android:textColor="#4901FF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivSigMoneda"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btnOfrecer"
        android:layout_alignParentRight="true"
        android:src="@drawable/monedita_dorada" />

    <ListView
        android:id="@+id/lvconectados"
        android:layout_width="220dp"
        android:layout_height="320dp"
        android:layout_alignBottom="@+id/tvUserGanador"
        android:layout_alignLeft="@+id/tvNewCantMonedasS"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView8"
        android:minHeight="300dp"
        android:minWidth=" 300dp" >

    </ListView>

    <TextView
        android:id="@+id/tvNewCantMonedasS"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivSigMoneda"
        android:layout_alignRight="@+id/textView9"
        android:text="..."
        android:textSize="23sp" />

    <TextView
        android:id="@+id/tvEtiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toLeftOf="@+id/ivSigMoneda"
        android:text="CONECTADOS"
        android:textColor="#FF0000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:layout_toLeftOf="@+id/tvEtiquetas"
        android:paddingLeft="50dp"
        android:text="TIEMPO RESTANTE"
        android:textColor="#222222"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTRestante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:text="00:00:00"
        android:textColor="#FF0000"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etNewOferta"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:layout_above="@+id/btnOfrecer"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:ems="10"
        android:hint="00"
        android:inputType="number"
        android:textSize="22sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvUserGanador"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivMonedaSubasta1"
        android:layout_alignLeft="@+id/textView5"
        android:text="Usuario ganador"
        android:textColor="#4901FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivMonedaSubasta1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/ivImagenProducto"
        android:layout_toRightOf="@+id/tvTRestante"
        android:src="@drawable/abc_ab_share_pack_holo_dark" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/tvMejorOferta"
        android:layout_alignLeft="@+id/etNewOferta"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="MEJOR APUESTA:"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMejorOferta"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivMonedaSubasta1"
        android:layout_alignRight="@+id/tvTRestante"
        android:text="7000"
        android:textColor="#FF0000"
        android:textSize="25sp" />

</RelativeLayout>